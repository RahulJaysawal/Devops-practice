FROM node:alpine as babu1

WORKDIR /app/app1

COPY web_app/package.json /app/app1

RUN npm install

COPY . /app/app1

RUN npm run build

FROM node:alpine as babu2

WORKDIR /app/app2

COPY mobile_app/package.json /app/app2

RUN npm install

COPY . /app/app2

RUN npm run build


